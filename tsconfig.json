{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}